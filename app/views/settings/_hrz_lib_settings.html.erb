<%# Purpose: Settings partial for HRZ Lib plugin configuration. %>

<fieldset class="box tabular" style="margin-bottom: 20px;">
  <legend><%= l(:label_hrz_transport_settings) %></legend>
  
  <p>
    <%= label_tag 'settings_transport_target_url', l(:label_hrz_transport_target_url) %>
    <%= text_field_tag 'settings[transport_target_url]', 
                       @settings['transport_target_url'], 
                       size: 60,
                       placeholder: 'https://target-redmine.example.com' %>
    <br/>
    <em class="info"><%= l(:help_hrz_transport_target_url) %></em>
  </p>
</fieldset>

<style>
  fieldset.box {
    border: 1px solid #d7d7d7;
    padding: 10px 15px;
    margin: 10px 0;
  }
  
  fieldset.box legend {
    font-weight: bold;
    padding: 0 5px;
    color: #555;
  }
  
  fieldset.box p {
    margin: 10px 0;
  }
  
  fieldset.box label {
    font-weight: bold;
    display: inline-block;
    margin-bottom: 5px;
  }
  
  fieldset.box em.info {
    color: #666;
    font-size: 0.9em;
    display: block;
    margin-top: 5px;
  }
