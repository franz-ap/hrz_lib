<h2><%= l(:label_hrz_automation) %></h2>

<div class="tabs">
  <ul>
    <li><%= link_to l(:label_conditions),    hrz_automation_settings_path(tab: 'conditions'),    class: (@tab == 'conditions'    ? 'selected' : '') %></li>
    <li><%= link_to l(:label_steps),         hrz_automation_settings_path(tab: 'steps'),         class: (@tab == 'steps'         ? 'selected' : '') %></li>
    <li><%= link_to l(:label_actions),       hrz_automation_settings_path(tab: 'actions'),       class: (@tab == 'actions'       ? 'selected' : '') %></li>
    <li><%= link_to l(:label_ai_models),     hrz_automation_settings_path(tab: 'ai_models'),     class: (@tab == 'ai_models'     ? 'selected' : '') %></li>
    <li><%= link_to l(:label_miscellaneous), hrz_automation_settings_path(tab: 'miscellaneous'), class: (@tab == 'miscellaneous' ? 'selected' : '') %></li>
  </ul>
</div>

<div class="tab-content">
  <%= render partial: "tab_#{@tab}" %>
</div>
